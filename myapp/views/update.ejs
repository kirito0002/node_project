<%- include ./common/update.ejs  %>

<div class="container">
    <div class="row">
        <div class="col-sm-10" style="margin-top:50px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    修改病人信息
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="http://localhost:4000/patient/update/<%=data.id%>" method="post" enctype="multipart/form-data">
                            <ul>
                                <li> 姓名: <input type="text" name="title" value="<%=data.title%>"/></li>
                                <li> 图片: 
                                    <img src="<%=data.pic%>" alt="" width="50px" height="50px">
                                </li>
                                <li> 图片: <input type="file" name="pic" /></li>
                                <li> 病房号: <input type="text" name="price"  value="<%=data.price%>"/></li>
                                <li> 健康状态: <input type="text" name="fee"  value="<%=data.fee%>"/></li>
                                <li> 入院时间: <input type="text" name="createAt"  value="<%=data.createAt%>"/></li>
                                <li> 出院时间: <input type="text" name="updateAt"  value="<%=data.updateAt%>"/></li>
                                <li>
                                    <br />
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<%- include ./common/footer.ejs  %>